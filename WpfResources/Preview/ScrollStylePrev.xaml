<Window x:Class="WpfResources.Preview.ScrollStylePrev"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ScrollStylePrev" Height="300" Width="300">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/WpfStyles;component/WpfStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <ScrollViewer Height="200" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
            <StackPanel>
                <Button Height="40" Width="400"/>
                <Button Height="40" Width="400"/>
                <Button Height="40" Width="400"/>
                <Button Height="40" Width="400"/>
                <Button Height="40" Width="400"/>
                <Button Height="40" Width="400"/>
                <Button Height="40" Width="400"/>
                <Button Height="40" Width="400"/>
                <Button Height="40" Width="400"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
